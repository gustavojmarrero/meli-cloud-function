NODE_ENV=development

#===========================
# BASE DE DATOS
#===========================
# URI de conexión a MongoDB Atlas
URI_BD_GUATEVER=mongodb+srv://username:password@cluster.mongodb.net/database

#===========================
# MERCADOLIBRE CLIENT_ID
#===========================
# Credenciales de la aplicación de MercadoLibre
MELI_CLIENT_ID=your_meli_client_id_here
MELI_CLIENT_SECRET=your_meli_client_secret_here
MELI_USER_ID=your_meli_user_id_here

#===========================
# GOOGLE SERVICE ACCOUNT
#===========================
# Credenciales de la cuenta de servicio de Google (formato JSON escapado)
# IMPORTANTE: Debe ser un JSON válido con saltos de línea escapados como \n
GOOGLE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"your-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@appspot.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40appspot.gserviceaccount.com","universe_domain":"googleapis.com"}

#===========================
# GOOGLE SHEETS CONFIG
#===========================
# ID del archivo de Google Sheets para exportaciones
SPREADSHEET_ID=your_google_sheets_id_here
# Rango de celdas para operaciones
SHEET_RANGE=SheetName!A1:Z
# ID de la carpeta de Google Drive para backups
DRIVE_FOLDER_ID=your_drive_folder_id_here